{
  "$schema": "https://opencode.ai/config.json",

  /* **************************************************************************
  * MODEL
  * ************************************************************************ */
  "model": "github-copilot/claude-sonnet-4",
  "small_model": "github-copilot/gpt-4.1",

  /* **************************************************************************
  * PERMISSIONS
  * ************************************************************************ */
  "permission": {
    "edit": "allow",
    "webfetch": "allow",
    "bash": {
      "git push": "ask",
      "npm install": "ask",
      "bun add": "ask",
      "bun install": "ask",
      "*": "allow"
    }
  },

  /* **************************************************************************
   * LSP
   * ************************************************************************ */
  "lsp": {
    "typescript": {
      "disabled": false
    },
    "eslint": {
      "disabled": false,
      "initialization": {
        "codeActionOnSave": { "mode": "all" },
        "useESLintClass": true
      }
    }
  },
  /* **************************************************************************
  * UI/UX
  * ************************************************************************ */
  "theme": "system",

  /* **************************************************************************
  * BINDS
  * ************************************************************************ */
  "keybinds": {
    "leader": "ctrl+x",
    "session_child_cycle": "<leader>]",
    "session_child_cycle_reverse": "<leader>[",
    "session_compact": "none",
    "session_share": "none"
  },

  /* **************************************************************************
  * MCPs
  * ************************************************************************ */
  "mcp": {
    "MCP_DOCKER": {
      "type": "local",
      "command": [
        "docker",
        "mcp",
        "gateway",
        "run"
      ]
    },
    "sequentialthinking": {
      "type": "remote",
      "url": "https://remote.mcpservers.org/sequentialthinking/mcp"
    },
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/mcp"
    }
  },

  /* **************************************************************************
  * MISC
  * ************************************************************************ */
  "instructions": ["{env:HOME}/.config/agents/instructions.md"],
  "autoupdate": false,
  "share": "manual"
}
