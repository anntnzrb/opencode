{
  "$schema": "https://opencode.ai/config.json",

  /* **************************************************************************
  * MODEL
  * ************************************************************************ */
  "model": "anthropic/claude-sonnet-4-20250514",
  "small_model": "github-copilot/gpt-4.1",

  /* **************************************************************************
  * PERMISSIONS
  * ************************************************************************ */
  "permission": {
    "edit": "allow",
    "webfetch": "allow",
    "bash": {
      "git push": "ask",
      "npm add": "ask",
      "bun add": "ask",
      "*": "allow"
    }
  },
  /* **************************************************************************
  * UI/UX
  * ************************************************************************ */
  "theme": "system",

  /* **************************************************************************
  * MCPs
  * ************************************************************************ */
  "mcp": {
    "MCP_DOCKER": {
      "type": "local",
      "command": [
        "docker",
        "mcp",
        "gateway",
        "run"
      ]
    },
    "sequentialthinking": {
      "type": "remote",
      "url": "https://remote.mcpservers.org/sequentialthinking/mcp"
    },
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/mcp"
    }
  },

  /* **************************************************************************
  * MISC
  * ************************************************************************ */
  "instructions": ["{env:HOME}/.config/agents/instructions.md"],
  "autoupdate": true,
  "share": "manual"
}
