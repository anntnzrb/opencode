{
  "$schema": "https://opencode.ai/config.json",

  /* **************************************************************************
  * MODEL
  * ************************************************************************ */
  "model": "github-copilot/claude-sonnet-4",
  "small_model": "github-copilot/gpt-4.1",

  /* **************************************************************************
  * PERMISSIONS
  * ************************************************************************ */
  "permission": {
    "edit": "allow",
    "webfetch": "allow",
    "bash": {
      "git push": "ask",
      "npm install": "ask",
      "bun add": "ask",
      "bun install": "ask",
      "*": "allow"
    }
  },

  /* **************************************************************************
  * PROVIDERS
  * ************************************************************************ */
  "provider": {
    "chutes-custom": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Chutes",
      "options": {
        "baseURL": "https://llm.chutes.ai/v1"
      },
      "models": {
        "moonshotai/Kimi-K2-Instruct-0905": {
          // https://huggingface.co/moonshotai/Kimi-K2-Instruct-0905
          "name": "Kimi K2 (0905)"
        },
        "deepseek-ai/DeepSeek-V3.1": {
          // https://api-docs.deepseek.com/quick_start/parameter_settings
          "name": "DeepSeek V3.1"
        }
      }
    }
  },

  /* **************************************************************************
   * LSP
   * ************************************************************************ */
  "lsp": {},

  /* **************************************************************************
  * UI/UX
  * ************************************************************************ */
  "theme": "system",

  /* **************************************************************************
  * BINDS
  * ************************************************************************ */
  "keybinds": {
    "leader": "ctrl+x",
    "session_child_cycle": "<leader>]",
    "session_child_cycle_reverse": "<leader>[",
    "session_compact": "none",
    "session_share": "none"
  },

  /* **************************************************************************
  * MCPs
  * ************************************************************************ */
  "mcp": {
    "MCP_DOCKER": {
      "type": "local",
      "command": [
        "docker",
        "mcp",
        "gateway",
        "run"
      ]
    },
    "sequentialthinking": {
      "type": "remote",
      "url": "https://remote.mcpservers.org/sequentialthinking/mcp"
    },
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/mcp"
    }
  },

  /* **************************************************************************
  * MISC
  * ************************************************************************ */
  "instructions": ["{env:HOME}/.config/agents/instructions.md"],
  "autoupdate": false,
  "share": "manual"
}
